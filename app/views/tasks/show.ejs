<div class="page-header">
    <h1>Details of task</h1>
</div>


<table class="table table-bordered">
    <tbody>
        <tr><th>title</th><td><%= task.title %></td></tr>
        <tr><th>user</th><td><%= task.user %></td></tr>
        <tr><th>finishTime</th><td><%= task.finishTime %></td></tr>
        <tr><th>created</th><td><%= task.created %></td></tr>    
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', path_to.edit_project_task(project, task), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.project_task(project, task), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', path_to.project_tasklist(project, tasklist)) %>
</div>